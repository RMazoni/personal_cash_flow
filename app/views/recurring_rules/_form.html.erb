<%= form_with model: recurring_rule do |form| %>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description, required: true %>
  </div>
  <div>
    <%= form.label :amount %>
    <%= form.number_field :amount, min: 0.01, step: 0.01, required: true %>
  </div>
  <div>
    <%= form.label :month_day %>
    <%= form.number_field :month_day, in: 1..31, step: 1, required: true %>
  </div>
  <div>
    <%= form.label :kind %>
    <%= form.select :kind, ["Fixed Expense", "Fixed Income"] %>
  </div>
  <div>
    <%= form.submit %>
    <%= link_to "Cancel", settings_index_path %>
  </div>
<% end %>
